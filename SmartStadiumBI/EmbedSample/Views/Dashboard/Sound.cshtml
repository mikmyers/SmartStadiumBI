@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <ol class="breadcrumb navbar-breadcrumb">
        <li>Reports</li>
        <li>Sound Monitoring</li>
        <li class="active" id="page-name"></li>
    </ol>
}



<div class="side-body padding-top">
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-map-marker fa-fw"></i> Stadium Map

                </div>
                <!-- /.panel-heading -->
                <div class="panel-body" style="padding:0px" id="bingmap">

                    <div id="map" class="leftalign" style="float:left; min-width: 100%; height: 300px; position: relative;">

                        <img src="~/Content/images/ajax-loader-big.gif" />

                    </div>

                </div>
                <!-- /.panel-body -->
            </div>

        </div>

        <!-- /.col-lg-8 -->
        <div class="col-lg-8" style="padding-left:0px; padding-right:20px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Live Sound Data<span id="realtimecharttitle"> for the last 20 minutes</span>
                    <div class="pull-right">


                        <div class="btn-group">
                            <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                Filter Sound Data
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu pull-right" role="menuitemradio">
                                <li>
                                    <a href="#" id="realtime20Minutes">Last 20 Minutes</a>
                                </li>
                                <li>
                                    <a href="#" id="realtime60Minutes">Last Hour</a>
                                </li>
                                <li>
                                    <a href="#" id="realtime120Minutes">Last 2 Hours</a>
                                </li>
                                <li>
                                    <a href="#" id="realtime180Minutes">Last 3 Hours</a>
                                </li>
                                <li>
                                    <a href="#" id="realtime1440Minutes">Last Day</a>
                                </li>
                                <li>
                                    <a href="#" id="realtimeDatePicker">Pick Date</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <img id="progressRealtimeChart" class="center-block" src="~/Content/images/ajax-loader-big.gif" />

                    <div id="realTimeChart" style="float:left; min-width:100%; height:300px">
                    </div>


                </div>
                <!-- /.panel-body -->
            </div>
        </div>

        <!-- /.col-lg-4 -->
    </div>
    <!-- /.row -->


    <div class="row">
        <!-- /.col-lg-8 -->
        <div class="col-lg-12" style="padding-right:20px">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-line-chart fa-fw"></i> Rolling 15 Minute Averages of LEQ <span id="rollingcharttitle">for the last 20 minutes</span>
                    <div class="pull-right">
                        <div class="btn-group">
                            <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                Filter Sound Data
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu pull-right" role="menuitemradio">
                                <li>
                                    <a href="#" id="rolltime20Minutes">Last 20 Minutes</a>
                                </li>
                                <li>
                                    <a href="#" id="rolltime60Minutes">Last Hour</a>
                                </li>
                                <li>
                                    <a href="#" id="rolltime120Minutes">Last 2 Hours</a>
                                </li>
                                <li>
                                    <a href="#" id="rolltime180Minutes">Last 3 Hours</a>
                                </li>
                                <li>
                                    <a href="#" id="rolltime1440Minutes">Last Day</a>
                                </li>
                                <li>
                                    <a href="#" id="rolltimeDatePicker">Pick Date</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <img id="progressRollingChart" class="center-block" src="~/Content/images/ajax-loader-big.gif" />

                    <div id="rollingAveragesChart" style="float:left; min-width:100%; height:250px">


                    </div>


                </div>
                <!-- /.panel-body -->
            </div>


        </div>
        <!-- /.col-lg-8 -->

    </div>
    </div>

@section PageScripts{
        <!-- custom js files-->
<script type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>
<script type="text/javascript" src="~/js/bingmap.js"></script>

<script type='text/javascript' src='~/js/charts.js'></script>
}